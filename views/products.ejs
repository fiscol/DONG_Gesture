	<script>
$(document).ready(function(){
    var serverPath = "http://localhost:3004/";
    $('#product-submit').click(function(e){
        e.preventDefault();
        if($("#cbox1").is(':checked') || $("#cbox2").is(':checked') || $("#cbox3").is(':checked')){
            var Products = [];
            if($("#cbox1").is(':checked')){ 
                Products.push($("#cbox1").val());
            }
            if($("#cbox2").is(':checked')){ 
                Products.push($("#cbox2").val());
            }
            if($("#cbox3").is(':checked')){ 
                Products.push($("#cbox3").val());
            }
            $.post(serverPath + "users/saveProduct",{
               Products : Products 
             },function(data){
            if(data.Error) {
                alert(data.Error);
            } 
            else {
                window.location.replace(data.Index);
            }
            });
        }
        else{
            alert("請選擇產品");
        }
    });
});
</script>
